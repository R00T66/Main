local Notifications = { }
local MessageBox = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/NotificationGUI/main/source.lua"))()

-- UDim2.new(.5, -1000, .5, -550)
-- UDim2.new(0.5,0,0.5,0)

function Notifications:SendNotification(Title, Text, Pos, NotificationID)
   
   local NotificationSound;
   
   if NotificationID ~= nil and NotificationID ~= 0 then
   
      NotificationSound = Instance.new("Sound", game:GetService("CoreGui"));
      NotificationSound.Volume = 3;
      NotificationSound.SoundId = "rbxassetid://" .. tostring(NotificationID);
      NotificationSound:Play();
      NotificationSound.Playing = true;
      
   end
   
   MessageBox.Show({Position = Pos, Text = Title, Description = Text, MessageBoxIcon = "Question", MessageBoxButtons = "OK", Result = function(res)
      if (res == "OK") then
         return
      end
   end})

   if NotificationSound ~= nil then
      NotificationSound.Ended:Wait()
      NotificationSound:Destroy()
   end
end

return Notifications
