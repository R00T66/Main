local Notifications = { }
local MessageBox = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/NotificationGUI/main/source.lua"))()

-- UDim2.new(.5, -1000, .5, -550)
-- UDim2.new(0.5,0,0.5,0)

function Notifications:SendNotification(Title, Text, Pos)
   MessageBox.Show({Position = Pos, Text = Title, Description = Text, MessageBoxIcon = "Question", MessageBoxButtons = "OK", Result = function(res)
      if (res == "OK") then
         return
      end
   end})
end

return Notifications
